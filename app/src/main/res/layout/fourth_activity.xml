<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top Image -->
    <ImageView
        android:id="@+id/main_image"
        android:layout_width="300dp"
        android:layout_height="246dp"
        android:src="@drawable/single_picture"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Main Heading -->
    <TextView
        android:id="@+id/txt_make_connects_with_travello"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="Make connects with Travello"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="@font/archivo_black"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/main_image"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/txt_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To your dream trip"
        android:textSize="20sp"
        android:paddingStart="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txt_make_connects_with_travello"
        app:layout_constraintStart_toStartOf="@id/txt_make_connects_with_travello" />

    <!-- Left Dot -->
    <ImageView
        android:id="@+id/img_light_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dot3"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@id/next_btn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="60dp" />

    <!-- Middle Dot -->
    <ImageView
        android:id="@+id/img_dark_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dot"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/img_light_dot"
        app:layout_constraintBottom_toBottomOf="@id/img_light_dot" />

    <!-- Right Dot -->
    <ImageView
        android:id="@+id/img_light_dark_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dot2"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/img_dark_dot"
        app:layout_constraintBottom_toBottomOf="@id/img_dark_dot" />

    <!-- Next Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/next_btn"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="Move Next Page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
